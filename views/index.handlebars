<h1>Eat Da Buger!</h1>

<h2>Fresh Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{this.id}}. {{this.burger_name}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{this.id}}. {{this.burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bur">Burger Name:</label>
    <input type="text" id="bur" name="name">
  </div>

  <div class="form-group">
    <label for="dev">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Fresh
  </div>

  <button type="submit">Add Burger</button>
</form>
